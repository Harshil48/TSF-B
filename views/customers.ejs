			  <th scope="col">Current Balance</th>
			  <th scope="col">Contact</th>
			</tr>
		  </thead>
		  <tbody>
			<% custs.forEach(function(c,cnt){ %>
			<tr>
			  <th scope="row"><%= cnt+1 %></th>
			  <td><a href="/customers/<%= c._id %>"><%= c.firstname %> <%= c.lastname %></a></td>
			  <td><%= c.accountNo %></td>
			  <td> â‚¹ <%= c.currentBal %></td>
			  <td><%= c.contactNo %> / <%= c.email %></td>
